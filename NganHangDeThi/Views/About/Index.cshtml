@using Data.Entity;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<About> listAbout = ViewBag.listAbout as List<About>;
    List<About> About = ViewBag.About as List<About>;
}

<div class="text-center">
    <h2 class="main-title">
        @if (About != null && About.Count > 0)
        {
            foreach (var item in About)
            {
                @item.Title
            }
        }<h2>
            <hr>
</div>
<div class="row">
    <div class="col-lg-3">
        <div id="topheader">
            <div class="list-group">
                @if (listAbout != null && listAbout.Count > 0)
                {
                    foreach (var item in listAbout)
                    {
                        if (ViewBag.ItemGroup == item.AboutID)
                        {
                            <a href="#" class="list-group-item active"><i class="glyphicon glyphicon-pencil icon-menu"></i> @item.Title</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Index", "News",new { id = item.AboutID })" class="list-group-item"><i class="glyphicon glyphicon-pencil icon-menu"></i> @item.Title</a>
                        }
                    }
                }
                @*<a href="#" class="list-group-item active">First item</a>
                    <a href="#" class="list-group-item">Second item</a>
                    <a href="#" class="list-group-item">Third item</a>*@
            </div>
        </div>

    </div>
    <div class="col-lg-9 row">
        @if (About != null && About.Count > 0)
        {
            foreach (var item in About)
            {
                <div>@Html.Raw(item.Des)</div>
            }
        }
    </div>
</div>
<script>
    $('#topheader .list-group a').on('click', function () {
        $('#topheader .list-group').find('a.active').removeClass('active');
        $(this).addClass('active');
    });
</script>

